<label>Report Box Summay</label>
<section class="box">
<div class="columns">
  <div class="column mr-1 has-background-black has-text-white">Station Location <p>Name: {{stationName}}</p> <p>Latitude: {{stationLatitude}}</p><p>Longitude: {{stationLongitude}}</p></div>
  <div class="column mr-1 has-background-danger has-text-white">Weather code <p>{{code}}</p></div>
  <div class="column mr-1 has-background-warning has-text-white">Temp <p>Min Temp: {{minTemp.temp}}°C</p><p>Max Temp: {{maxTemp.temp}}°C</p></div>
  <div class="column mr-1 has-background-info has-text-white">Wind <p>Min Wind Speed: {{minWindSpeed.windSpeed}}</p> <p>Max Wind Speed: {{maxWindSpeed.windSpeed}}</p></div>
  <div class="column mr-1 has-background-success has-text-white">Pressure <p>Min Pressure: {{minPressure.pressure}}atm</p> <p>Max Pressure: {{maxPressure.pressure}}atm</p></div>
</div>
</section>
<table class="table is-fullwidth is-hoverable">
  <thead>
    <tr>
      <th>Date and time</th>
      <th>Weather Code</th>
      <th>Temperature</th>
      <th>Wind Speed</th>
      <th>Wind Direction</th>
      <th>Pressure</th>
      <th>
      <th></th>
      </th>
    </tr>
  </thead>
  <tbody>
    {{#each station.reports}}
    <tr>
      <td>
      {{dateTime}}
      </td>
      <td>
        {{code}}
      </td>
      <td>
        {{temp}}
      </td>
      <td>
        {{windSpeed}}
      </td>
      <td>
        {{windDirection}}
      </td>
      <td>
        {{pressure}}
      </td>
      <td>
      <a href="/station/{{../station._id}}/deletereport/{{_id}}" class="button">
         {{>icons/delete}}
      </a>
      </td>
      <td>
      <a href="/station/{{../station._id}}/editreport/{{_id}}" class="button">
         {{>icons/edit}}
      </a>
     </td>
    </tr>
    {{/each}}
  </tbody>
</table>
